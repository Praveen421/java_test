package logical;
import java.util.*;
public class HackerRank2 {

	public static void main(String[] args) {	
		Scanner scn=new Scanner(System.in);
		System.out.println("===============");
		for(int i=0;i<3;i++) {
			String s=scn.next();
			int n=scn.nextInt();
			System.out.printf("%-15s%03d%n", s, n); 
		}	
		System.out.println("===============");
	}

}
